// src/app/test-prompts/page.tsx
'use client';

import { usePrompts } from '@/hooks/usePrompts';

const TestPromptsPage = () => {
  const { prompts, loading, error } = usePrompts();

  if (loading) {
    return <div>Loading prompts...</div>;
  }

  return (
    <div className="p-8">
      <h1 className="text-2xl font-bold mb-4">Prompts API Test Page</h1>
      {error && (
        <div>
          <h2 className="text-red-500">An Error Occurred:</h2>
          <pre className="bg-gray-800 p-4 rounded mt-2">{error}</pre>
        </div>
      )}
      {prompts && (
        <div>
          <h2 className="text-green-500">Success! Data Received:</h2>
          <pre className="bg-gray-800 p-4 rounded mt-2">
            {JSON.stringify(prompts, null, 2)}
          </pre>
        </div>
      )}
    </div>
  );
};

export default TestPromptsPage;